# Environment variables for production deployment
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000
FRONTEND_URL=https://your-domain.com

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/job_portal
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/job_portal?retryWrites=true&w=majority

# MongoDB Root Credentials (for Docker)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@jobportal.com

# Email Configuration (SendGrid - Alternative)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Frontend Build Configuration
VITE_API_URL=https://api.your-domain.com

# AWS Configuration (if using AWS S3 for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=job-portal-uploads

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cloudinary Configuration (alternative for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (in MB)
MAX_FILE_SIZE=5
MAX_RESUME_SIZE=5

# Session Configuration
SESSION_SECRET=your_session_secret_key

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info

# Sentry (Error Tracking - Optional)
SENTRY_DSN=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=

# Payment Gateway (if implementing premium features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Social Auth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
